<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FluentPort.UserControls.TunnelUserControl">
        <Border Margin="10"
                CornerRadius="8"
                BorderThickness="2"
                BorderBrush="{StaticResource WhiteSmokeColor}"
                x:Name="TunnelBorder"
                Height="80">
                <Grid ColumnDefinitions="Auto Auto * Auto * Auto Auto Auto Auto"
                        Margin="10">
                        <Button x:Name="LocalAddressLink"
                                Click="LocalAddressLinkClicked"
                                Background="Transparent"
                                CornerRadius="8"
                                Grid.Column="0"
                                Margin="-5 0 10 0">
                                <TextBlock FontSize="21"
                                        FontWeight="Medium"
                                        Cursor="Hand"
                                        x:Name="LocalAddressText"
                                        VerticalAlignment="Center" />
                        </Button>
                        <Image x:Name="ArrowLeft"
                                IsVisible="False"
                                Source="avares://FluentPort/Assets/ball_left-8x.png"
                                Grid.Column="1"
                                Height="22"
                                Width="28" />
                        <Image x:Name="ArrowMiddle1"
                                IsVisible="False"
                                Source="avares://FluentPort/Assets/ball_middle-1x.png"
                                Grid.Column="2"
                                Stretch="UniformToFill"
                                Height="4" />
                        <Border x:Name="ArrowMiddle"
                                Grid.Column="3"
                                CornerRadius="8"
                                Background="{StaticResource PrimaryColor}"
                                IsVisible="False"
                                Height="48">
                                <TextBlock x:Name="ArrowStatus"
                                        Margin="14 3 14 3"
                                        FontWeight="Medium"
                                        FontSize="18"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center" />
                        </Border>
                        <Image x:Name="ArrowMiddle2"
                                IsVisible="False"
                                Source="avares://FluentPort/Assets/ball_middle-1x.png"
                                Grid.Column="4"
                                Stretch="UniformToFill"
                                Height="4" />
                        <Image x:Name="ArrowRight"
                                IsVisible="False"
                                Source="avares://FluentPort/Assets/ball_right-8x.png"
                                Grid.Column="5"
                                Height="22"
                                Width="28" />
                        <StackPanel Orientation="Horizontal"
                                Grid.Column="6"
                                VerticalAlignment="Center"
                                Margin="5 10 10 10">
                                <Button x:Name="RemoteAddressLink"
                                        Click="RemoteAddressLinkClicked"
                                        Background="Transparent"
                                        IsVisible="False"
                                        CornerRadius="8">
                                        <TextBlock FontSize="21"
                                                FontWeight="Medium"
                                                Cursor="Hand"
                                                x:Name="RemoteAddressText"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center" />
                                </Button>
                                <Image x:Name="LevelIndicatorPicture"
                                        Height="28"
                                        IsVisible="False"
                                        Source="avares://FluentPort/Assets/premium_indicator.png" />
                        </StackPanel>
                        <Button x:Name="StartBtn"
                                Grid.Column="7"
                                Margin="0 0 10 0"
                                Classes="SelectedBtn MBtn"
                                Click="StartBtnClicked"
                                Padding="0"
                                Width="105"
                                FontSize="18"
                                FontWeight="Medium">Start</Button>
                        <Button x:Name="ManageBtn"
                                Grid.Column="8"
                                Classes="MBtn"
                                Click="ManageBtnClicked"
                                Padding="0"
                                Width="105"
                                FontSize="18"
                                FontWeight="Medium">Manage</Button>
                </Grid>
        </Border>
</UserControl>
